<!doctype html>
<html>

<head>
	<% include header %>

		<script type="text/javascript" src="http://mbenford.github.io/ngTagsInput/js/ng-tags-input.min.js"></script>
		<link rel="stylesheet" href="http://mbenford.github.io/ngTagsInput/css/ng-tags-input.min.css">
		<link rel="stylesheet" href="http://mbenford.github.io/ngTagsInput/css/ng-tags-input.bootstrap.min.css">

		<script type="text/javascript" src="http://schlogen.github.io/angular-confirm/javascripts/angular-confirm.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.0/ui-bootstrap-tpls.js"></script>


		<script src="/admin/index.js"></script>
		<style>
			.skillTag {
				margin-right: 2px;
				margin-top: 2px;
			}
		</style>
</head>

<body ng-app="admin" ng-controller="AdminController">
	<% include navbar %>


		<div class="container" style="margin-top:50px;">
			<div class="bs-docs-section">
				<div class="page-header">
					<div class="row">
						<div class="col-lg-12">
							<h1>Talent List</h1>
							<h4><a href="/new">Add New</a></h4>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-12">
						<div class="bs-component">
							<table class="table table-striped table-hover ">
								<thead>
									<tr>
										<th>Name</th>
										<th>E-mail</th>
										<th>Skills</th>
									</tr>
								</thead>
								<tbody>
									<tr ng-repeat="talent in allTalents" ng-click="setTalent(talent,$index)" data-toggle="modal" data-target="#modalEditTalent">
										<td>{{talent.name}}</td>
										<td>{{talent.email}}</td>
										<td>
											<a class="btn btn-info btn-xs skillTag" ng-repeat="skill in talent.skills">
												{{skill}}
											</a>
										</td>
									</tr>
								</tbody>
							</table>

						</div>

					</div>
				</div>
			</div>
		</div>
		<!--END MAIN CONTAINER-->

		<!--MODALS-->
		<div class="modal fade" id="modalEditTalent">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<h4 class="modal-title" ng-show="error">NAME OF TALENT</h4>
					</div>
					<div class="modal-body">
						<form name="formTalent" class="form-horizontal">
							<fieldset>
								<legend>Main Details</legend>
								<div ng-show="message" class="alert alert-dismissible alert-success">
									<button type="button" class="close" ng-click="message=''">Ã—</button> {{message}}
								</div>
								<div class="form-group">
									<label for="txtName" class="col-lg-2 control-label">Name</label>
									<div class="col-lg-8">
										<input id="txtName" type="text" ng-model="talent.name" required class="form-control">
									</div>
								</div>
								<div class="form-group">
									<label for="txtEmail" class="col-lg-2 control-label">Email</label>
									<div class="col-lg-8">
										<input id="txtEmail" type="text" ng-model="talent.email" class="form-control">
									</div>
								</div>
								<div class="form-group">
									<label for="txtSkills" class="col-lg-2 control-label">Tags</label>
									<div class="col-lg-8">
										<tags-input id="txtSkills" ng-model="talent.skills" min-length="1"></tags-input>
									</div>
								</div>

								<!--<div class="form-group">
									<div class="col-lg-8 col-lg-offset-2">
										<p>
											<a style="cursor:pointer;" data-toggle="modal" data-target="#modalUploadPDF">
												<span ng-show="person.uploadedPDFUrl">View PDF</span>
												<span ng-show="!person.uploadedPDFUrl">Upload PDF</span>
											</a>
										</p>
									</div>
								</div>
								<div class="form-group">
									<div class="col-lg-8 col-lg-offset-2">
										<a href="/admin" class="btn btn-default">Cancel</a>
										<button type="submit" ng-click="save(person)" class="btn btn-primary">Save</button>
										<button ng-show="!isNewPerson" type="button" data-toggle="modal" data-target="#modalDelete" class="btn btn-danger pull-right">
											Delete
										</button>
									</div>
								</div>-->

							</fieldset>
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
						<button type="button" ng-show="!posted" ng-click="sendRegistrationForm(user)" class="btn btn-primary">OK. Send me my password!</button>
					</div>
				</div>
			</div>


</body>

</html>