<!doctype html>
<html>
<head>
	<% include header %>
	<script src="/admin/index.js"></script>
	<style>	
	.skillTag{
		margin-right: 2px;
		margin-top:2px;
	}
	</style>
</head>
<body ng-app="admin" ng-controller="AdminController">
	<% include navbar %>

	<div class="container" style="margin-top:50px;">
		<div class="bs-docs-section">
			<div class="page-header">
				<div class="row">
					<div class="col-lg-12">
						<h1>Talent List</h1>
						<h4><a href="/new">Add New</a></h4>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-12">
					<div class="bs-component">
						<table class="table table-striped table-hover ">
							<thead>
								<tr>
									<th>Name</th>
									<th>E-mail</th>
									<th>Skills</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="talent in allTalents">
									<td>{{talent.name}}</td>
									<td>{{talent.email}}</td>
									<td>
										<a class="btn btn-info btn-xs skillTag" ng-repeat="skill in talent.skills">
											{{skill}}
										</a>
									</td>
								 	<td><a class="btn btn-primary btn-sm btn-block">Edit</a></td>
								</tr>
							</tbody>
						</table>

					</div>

				</div>
			</div>
		</div>
	</div>
</body>
</html>
